/* pages/source/details/details.wxss */
@import "../source-list/source-list-template.wxss";
page{
  background: #F5F5F5;
}
.details-box{
  margin:30rpx 30rpx 60rpx;
  padding:42rpx;
  border-radius:10rpx;
  background:#fff; 
}
.details{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.details-sort{
  display: flex;
  flex-direction: column;
}
.details-sort .details-item{
  display: flex;
  flex-direction: row;
  padding-top: 46rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 44rpx;
}
.ranking{
  width: 25%;
}
.details-item .number{
  padding-left: 20rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: #000;
}