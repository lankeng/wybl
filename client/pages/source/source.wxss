.nav{
    position: relative;
    z-index: 99;
    display: flex;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}
.nav-son{
    display: flex;
    flex: 1;
    text-align: center;
    height: 40px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}
