/* pages/my/history/history.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}

.navbar .item.active {
  color: #000;
}

.navbar .item.active:after {
  content: "";
  display: block;
  margin: 0 30rpx;
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #0097ff;
}

.history {
  display: flex;
  flex-direction: column;
}

.history-date {
  padding: 28rpx 30rpx;
  font-size: 30rpx;
  color: #666;
  background: #f5f5f5;
}

.history-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  margin-top: -1rpx;
  box-sizing: border-box;
}

.history-info {
  display: flex;
  flex-direction: column;
  width: 500rpx;
}

.history-title {
  font-size: 30rpx;
}

.history-tiem {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.history-star {
  display: flex;
  flex-direction: column;
}

.history-author {
  text-align: right;
  font-size: 30rpx;
  color: #09bb07;
}

.history-state {
  padding-top: 10rpx;
  text-align: right;
  font-size: 24rpx;
  color: #e60101;
}

.cell {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
