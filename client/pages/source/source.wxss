.content{
    display: inline-block;
}
.icon{
    display: inline-block;
    border: 4px solid transparent;
    border-top: 4px solid #9b9b9b;
    margin-left: 5px;
}
.temp{
    position: relative;
    z-index: 4;
}
.temp1{
    display: none;
    width: 100%;
    max-height: 550rpx;
    overflow-y: scroll;
    padding: 0 0 0 30rpx;
    line-height:100rpx;
    background: #fff;
}
.temp2{
    display: none;
    width: 100%;
    max-height: 750rpx;
    overflow-y: scroll;
    padding: 0 0 0 30rpx;
    line-height:100rpx;
    background: #fff;
}
.slidedown{
    transform:  translateY(0%);
}
.temp {
  color:#333; 
}
.temp view{
    border-bottom: 1px solid #eee;
    font-size: 14px;
   
}
.active_color{
  color: #0097FF;
}
.quyu{
    position: relative;
    top: 0rpx;
    display: none;
    height: 628rpx;
    z-index: 5;
}
.quyu .qy{
    overflow-y: scroll;
    float: left;
    width: 50%;
    height: 628rpx;
    line-height: 80rpx;
    box-sizing: border-box; 
    font-size: 14px;
    color: #717273;
}
.qy view{
    text-overflow: ellipsis;
    overflow: hidden; 
    white-space:nowrap;  
    padding-left: 15rpx; 
}
.quyu-left{
    background: #fff;
}
.quyu-center{
    background: #f5f5f5;
}
.quyu-right{
    background: #eee;
}
.quyu-right view{
    border-bottom: 1px solid #c5c5c5;
}
.current{
    
    color: #0097FF;
}
.current2{
   color: #0097FF;
}
.fullbg{
    position: fixed;
    top:106rpx;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
    opacity: 0;
    display: none;
}
.fullopacity{
    opacity: .5;
    display: block;
}

.nav-son.active .content{
    color: #61beff;
}
.nav-son.active .icon{
    border-bottom: 4px solid #61beff;
    border-top:0;
}
@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidown{
    display: block;
    animation: slidown .2s ease-in both;
    z-index: 5;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: none;
    animation: slidup .2s ease-in both;
}
.disappear{
    display: none;
}




